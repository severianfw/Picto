<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Picto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/black_500</item>
        <item name="colorOnPrimary">@color/white_500</item>
        <item name="colorAccent">@color/blue_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_700</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>
        <item name="colorOnSecondary">@color/black_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="TextView.Caption">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/black_200</item>
    </style>

    <style name="TextView.Body">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

</resources>